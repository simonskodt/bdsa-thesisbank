<NavLink href="" class="thesis">
    <div class="card mb-4 mt-3 border-0 @(accepted ? "yellow" : "bg-grey")">
        <div class="row mb-4">
            <div class="col-sm-8">
                <h2 class="headline">@title</h2>
                <h3>Professor @teacher</h3>
                <h4 class="text-muted h6">@keywords</h4>
                <div class="excerpt">
                    <p>@excerpt</p>
                </div>
            </div>
                @if (accepted) {
                    <div class="col d-flex flex-row justify-content-center">
                        <div class="accepted-btns d-flex flex-column justify-content-around" style="width: 80%">
                            <button class="btn btn-accept">Accept</button>
                            <button class="btn btn-cancel">Decline</button>
                        </div>
                    </div>
                } else {
                    <div class="col d-flex justify-content-center">
                        <div class="not-accepted-btn d-flex align-items-center" style="width: 80%">
                            <button class="btn btn-cancel">Cancel</button>
                        </div>
                    </div>
                }
        </div>
    </div>
</NavLink>



<style>
    .card {
        border-radius: 10px !important;
    }
    
    .yellow {
        background: #FFD639;
    }

    .btn {
        padding: 12px 0;
        border-radius: 10px;
    }

    .btn-accept {
        background: #0095068A;
        color: white;
    }

    .btn-cancel {
        background: #E45A5A;
        color: white;
    }

    .btn-cancel {
        width: 100%;
    }

    .top-btn {
        padding: 15px 10px;
        text-align: center;
        color: black;
        font-weight: 700;
        text-decoration: none;
        border-radius: 5px;
    }

    .top-btn:hover {
        text-decoration: none;
        color: black;
    }

    .bg-grey {
        background: #F0F0F0;
        border-radius: 5px;
    }

    .excerpt {
        border-left: 2px solid black;
        padding: 10px;
    }

    .card {
        padding: 20px 30px;
    }
</style>

@code {

    // TODO: Parameters must be replaced with Thesis object over time
    
    [Parameter]
    public string title { get; set; } = "Human cognition and outer impact";

    [Parameter]
    public string teacher { get; set; } = "Stella Bony";

    [Parameter]
    public string keywords { get; set; } = "cognition, iq, social pshycology";

    [Parameter]
    public string excerpt { get; set; } = "Coginition has now become a more important factor when discussing solutions in IT. Seeking to find out how the outer impact influences this area.";

    [Parameter]
    public bool accepted { get; set; } = false;
    
}